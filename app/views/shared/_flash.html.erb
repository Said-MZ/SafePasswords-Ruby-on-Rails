<% flash.each do |type, message|%>
  <div class="toast align-items-center text-<%= flash_class(type) %> border-0 position-absolute top-0 end-0 mt-5 me-5" role="alert" aria-live="assertive" aria-atomic="true" data-controller="toast">
    <div class="d-flex">
      <div class="toast-body">
        <%= message %>
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
<% end %>