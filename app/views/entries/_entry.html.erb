<%
  # Check if this entry is currently being viewed
  current_entry_id = params[:id]&.to_i || @main_entry&.id
  is_active = entry.id == current_entry_id
  link_class = is_active ? 'nav-link active' : 'nav-link'
%>
<%= link_to(entry_path(entry), class: link_class) do %>
  <div class="d-flex align-items-center">
    <div class="entry-favicon">
      <%= image_tag("https://www.google.com/s2/favicons?domain=#{entry.url}&sz=32", alt: entry.name) %>
    </div>
    <%= entry.name %>
  </div>
<% end %>
