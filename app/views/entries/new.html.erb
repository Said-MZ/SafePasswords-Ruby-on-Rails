<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-header">
        <h3 class="mb-0">Create New Entry</h3>
      </div>
      <div class="card-body">
        <% if @entry.errors.any? %>
          <div class="alert alert-danger">
            <h4>Please fix the <%= pluralize(@entry.errors.count, 'error') %> below and try again.</h4>
            <ul class="mb-0">
              <% @entry.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_with(model: @entry, local: true, class: "row g-3") do |form| %>
          <div class="col-md-12">
            <%= form.label :name, class: "form-label" %>
            <%= form.text_field :name, class: "form-control", placeholder: "e.g. Gmail, Facebook, etc." %>
          </div>
          <div class="col-md-12">
            <%= form.label :url, "Website URL", class: "form-label" %>
            <%= form.url_field :url, class: "form-control", placeholder: "https://example.com" %>
          </div>
          <div class="col-md-6">
            <%= form.label :username, class: "form-label" %>
            <%= form.text_field :username, class: "form-control", placeholder: "your-username" %>
          </div>
          <div class="col-md-6">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control" %>
          </div>
          <div class="col-12">
            <%= form.submit "Create Entry", class: "btn btn-primary me-2" %>
            <%= link_to "Cancel", entries_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
